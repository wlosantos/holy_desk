<section class="text-sm text-slate-700 flex flex-col h-full">
  <header class="flex items-center gap-x-2 p-4">
    <span class="bg-cyan-600 text-slate-50 p-1.5 rounded-lg">
      <%= heroicon "book-open" %>
    </span>
    <h1 class="text-xl font-semibold">HolyDesk</h1>
  </header>

  <nav class="grow p-4">
    <div class="flex flex-col gap-y-2">
      <div id="dashboard-menu">
        <h4 class="text-xs font-semibold text-slate-500 mb-4">MENU</h4>
        <ul class="flex flex-col gap-y-0.5 text-slate-500 border-b border-slate-400/20 pb-4">
          <li class="hover:bg-slate-800/10 rounded-lg transition-colors duration-300">
            <%= link_to dashboard_path, class: "flex items-center justify-between px-4 py-2 hover:text-slate-700" do %>
              <div class="inline-block space-x-2">
                <%= heroicon "squares-plus", class: "inline-block" %>
                <span class="font-semibold">Dashboard</span>
              </div>
            <% end %>
          </li>

          <li class="hover:bg-slate-800/10 rounded-lg transition-colors duration-300">
            <%= link_to dashboard_path, class: "flex items-center justify-between px-4 py-2 hover:text-slate-700" do %>
              <div class="inline-block space-x-2">
                <%= heroicon "user-group", class: "inline-block" %>
                <span class="font-semibold">Users</span>
              </div>
              <div>
                <span class="text-xs font-semibold flex items-center justify-center text-slate-100 bg-red-600/50 rounded-full py-0.5 px-2">
                  15
                </span>
              </div>
            <% end %>
          </li>

          <li class="hover:bg-slate-800/10 rounded-lg transition-colors duration-300">
            <%= link_to dashboard_path, class: "flex items-center justify-between px-4 py-2 hover:text-slate-700" do %>
              <div class="inline-block space-x-2">
                <%= heroicon "envelope", class: "inline-block" %>
                <span class="font-semibold">Notifications</span>
              </div>
              <div>
                <span class="text-xs font-semibold flex items-center justify-center text-slate-100 bg-green-600/50 rounded-full py-0.5 px-2">
                  15
                </span>
              </div>
            <% end %>
          </li>

          <li class="hover:bg-slate-800/10 rounded-lg transition-colors duration-300">
            <%= link_to dashboard_path, class: "flex items-center justify-between px-4 py-2 hover:text-slate-700" do %>
              <div class="inline-block space-x-2">
                <%= heroicon "queue-list", class: "inline-block" %>
                <span class="font-semibold">Projects</span>
              </div>
              <div>
                <%= heroicon "chevron-down", class: "inline-block w-4 h-4 ml-auto" %>
              </div>
            <% end %>
          </li>

          <li>
            <ul class="flex flex-col gap-y-0.5 text-slate-500 border-l border-slate-400/30 ml-7 pl-3">
              <li class="hover:bg-slate-800/10 rounded-lg transition-colors duration-300">
                <%= link_to root_path, class: "flex items-center justify-between px-4 py-2 hover:text-slate-700" do %>
                  <span class="font-semibold">Task</span>
                <% end %>
              </li>

              <li class="hover:bg-slate-800/10 rounded-lg transition-colors duration-300">
                <%= link_to root_path, class: "flex items-center justify-between px-4 py-2 hover:text-slate-700" do %>
                  <span class="font-semibold">Schudules</span>
                <% end %>
              </li>
            </ul>
          </li>

          <li class="hover:bg-slate-800/10 rounded-lg transition-colors duration-300">
            <%= link_to root_path, class: "flex items-center justify-between px-4 py-2 hover:text-slate-700" do %>
              <div class="inline-block space-x-2">
                <%= heroicon "chart-bar-square", class: "inline-block" %>
                <span class="font-semibold">Financial Report</span>
              </div>
            <% end %>
          </li>

          <li class="hover:bg-slate-800/10 rounded-lg transition-colors duration-300">
            <%= link_to tenants_path, class: "flex items-center justify-between px-4 py-2 hover:text-slate-700" do %>
              <div class="inline-block space-x-2">
                <%= heroicon "rectangle-stack", class: "inline-block" %>
                <span class="font-semibold">Tenants</span>
              </div>
              <div>
                <span class="text-xs font-semibold flex items-center justify-center text-slate-100 bg-red-600/50 rounded-full py-0.5 px-2">
                  <%= Tenant.count %>
                </span>
              </div>
            <% end %>
          </li>
        </ul>
      </div>

      <div id="setting-menu" class="mt-4">
        <h4 class="text-xs font-semibold text-slate-500 mb-4">SUPPORT</h4>
        <ul class="flex flex-col gap-y-0.5 text-slate-500 border-b border-slate-400/20 pb-4">
          <li class="hover:bg-slate-800/10 rounded-lg transition-colors duration-300">
            <%= link_to root_path, class: "flex items-center justify-between px-4 py-2 hover:text-slate-700" do %>
              <div class="inline-block space-x-2">
                <%= heroicon "lifebuoy", class: "inline-block" %>
                <span class="font-semibold">Help Center</span>
              </div>
            <% end %>
          </li>

          <li class="hover:bg-slate-800/10 rounded-lg transition-colors duration-300">
            <%= link_to root_path, class: "flex items-center justify-between px-4 py-2 hover:text-slate-700" do %>
              <div class="inline-block space-x-2">
                <%= heroicon "cog-6-tooth", class: "inline-block" %>
                <span class="font-semibold">Setting</span>
              </div>
            <% end %>
          </li>
        </ul>
      </div>
    </div>
  </nav>
  <footer class="flex items-center justify-between gap-x-4 p-4 border-t border-slate-400/20">
    <div>
      <div class="w-10 h-10 overflow-hidden rounded-full bg-sky-600">
        <%= image_tag "https://images.unsplash.com/photo-1649123245135-4db6ead931b5?q=80&w=1925&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D", class: "object-cover" %>
      </div>
    </div>
    <div class="grow">
      <div class="font-semibold leading-2">
        <%= current_user.email.split("@").first %>
      </div>
      <small>Fullstack Develop</small>
    </div>
    <button>
      <%= heroicon "chevron-up-down", class: "w-6 h-6 text-slate-500 hover:text-slate-700" %>
    </button>
  </footer>
</section>